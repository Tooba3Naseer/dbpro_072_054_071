                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="custom-navbar">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>

                    <div class="main-menu main-menu2">
                        <ul>
                            <li class="active"><a href="@Url.Action("CustomerIndex", "Home")">home</a></li>





                            <li><a href="@Url.Action("OrderDetails", "Home")">Orders Details</a></li>
                            <li><a href="@Url.Action("cart", "Home")">Cart</a></li>
                            <li>
                                <a href="#">Customer Details</a>
                                <ul class="sub-menu">

                                    <li><a href="@Url.Action("MyProfile", "Users")">My Profile</a></li>
                                    <li><a href="@Url.Action("logOut", "Home")">Log Out</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">Feedback</a>
                                <ul class="sub-menu">
                                    <li><a href="@Url.Action("OthersFeedback", "Users")">All Feedbacks</a></li>
                                    <li><a href="@Url.Action("feedback", "Users")">My Feedback</a></li>

                                </ul>
                            </li>
                            <li><a href="#AboutUs">about</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Header Area End -->
    <!-- Banner Area Starts -->
    <section class="banner-area banner-area2 blog-page text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1><i>Your Shopping Cart</i></h1>
                    <p class="pt-2"><i>Edit Quantity of Item</i></p>
                </div>
            </div>
        </div>
    </section>
    <!-- Banner Area End -->
    <!-- food Form Starts -->
    <section class="contact-form section-padding3">
        <div class="container">

            <div class="order_details_table">

                <div class="table-responsive">
                    <h2>Edit</h2>


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.OrderId)
                            @Html.HiddenFor(model => model.FoodId)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </section>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    <!-- food Form Ends -->
    <!-- Footer Area Starts -->
    <footer class="footer-area" id="AboutUs">
        <div class="footer-widget section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
